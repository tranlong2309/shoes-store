
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký khách hàng</title>
    <link href="~/Asset/images/icon.png" rel="apple-touch-icon">
    <link href="~/Asset/images/icon.png" rel="icon">
    <link rel="stylesheet" href="~/Content/fonmLogin/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" />
</head>
<body>
    <!-- Form without bootstrap -->
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="auth-action-left">
                <div class="auth-form-outer">
                    <h2 class="auth-form-title">
                        Đăng Ký Khách Hàng
                    </h2>
                    <div class="auth-external-container">
                        <div class="auth-external-list">
                            <ul>
                                <li><a href="#"><i class="fa fa-google"></i></a></li>
                                <li><a href="https://www.facebook.com/long.tvl"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>

                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                <form class="login-form">
                    @Html.TextBox("NameND", null, new { @class = "auth-form-input", placeholder = "Name" })
                    @ViewData["loi1"]
                    @Html.TextBox("EmailND", null, new { @class = "auth-form-input", placeholder = "Email" })
                    @ViewData["loi2"]
                    <div class="input-icon">
                        <input Name="PassND" type="password" class="auth-form-input" placeholder="Password">
                        <i class="fa fa-eye show-password"></i>
                        @ViewData["loi3"]
                    </div>
                    @Html.Password("PassLND", null, new { @class = "auth-form-input", placeholder = "Nhập lại Pass" })
                    @ViewData["loi4"]
                    <input name="Diachi" type="text" class="auth-form-input" placeholder="Địa chỉ">
                    @ViewData["loi5"]
                    <input name="Sdt" type="text" class="auth-form-input" placeholder="Số điện thoại">
                    @ViewData["loi6"]
                    <div class="footer-action" style="margin-top:-5px">
                        <input type="submit" value="Sign Up" class="auth-submit">
                        <a href="Dangnhap" class="auth-btn-direct">Sign In</a>
                    </div>
                </form>
                    }
                </div>
            </div>
            <div class="auth-action-right">
                <div class="auth-image">
                    <img src="~/Content/fonmLogin/assets/vector.jpg" alt="login">
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/fonmLogin/js/common.js"></script>
</body>
</html>

