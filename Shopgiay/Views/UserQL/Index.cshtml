
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UserQL/shared/_LayoutUserQL.cshtml";
}

<div class="body table-responsive">
    @Html.ActionLink("Create New", "CreateGiay", "User")
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Giày</th>
                <th>Ảnh</th>
                <th>Giá Bán</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="warning">
                    <th scope="row">@item.IDGiay</th>
                    <td>@item.TenGiay</td>
                    <td><img src="@item.Cover" width="95px" /></td>
                    <td>@item.Giaban</td>
                    <td><i class="far fa-edit">@Html.ActionLink("Edit", "EditGiay", new { id = item.IDGiay })</i></td>
                    <td><i class="fas fa-calendar-week">@Html.ActionLink("Detail", "DetailsGiay", new { id = item.IDGiay })</i></td>
                    <td><i class="fas fa-trash-alt">@Html.ActionLink("Delete", "DeleteGiay", new { id = item.IDGiay })</i></td>
                </tr>
            }

        </tbody>
    </table>
</div>
