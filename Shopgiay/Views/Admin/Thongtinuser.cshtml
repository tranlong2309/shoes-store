@model IEnumerable<Shopgiay.Models.Account1>
@{
    ViewBag.Title = "Thongtinuser";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    CONTEXTUAL CLASSES
                    <small>Use contextual classes to color table rows or individual cells.</small>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                @Html.ActionLink("Create New", "Create", "Admin")
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Họ Tên</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="info">
                                <th scope="row">@item.UserID</th>
                                <td>@item.HoTen</td>
                                <td>@item.Email</td>
                                <td>@item.Pass</td>
                                <td><i class="far fa-edit">@Html.ActionLink("Edit", "Edit", new { id = item.UserID })</i></td>
                                <td><i class="fas fa-calendar-week">@Html.ActionLink("Detail", "Details", new { id = item.UserID })</i></td>
                                <td><i class="fas fa-trash-alt">@Html.ActionLink("Delete", "Delete", new { id = item.UserID })</i></td>

                                @{
                                    if (item.Follow == 2)
                                    {
                                        <td><a href="Link/@item.UserID" class="btn btn-info waves-effect" role="button">Follow</a>  </td>
                                    }
                                    else
                                    {
                                        <td><a href="Link/@item.UserID" class="btn btn-info waves-effect" role="button">Unfollow</a></td>
                                    }
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

